{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "pokedex-client",
  "version": "0.0.0",
  "license": "BSD-2-Clause",
  "author": "Nick Williams <git@nickawilliams.com>",
  "main": "src/main",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "cat .cleanrc | sed -E '/^#.*$/ d' | sed '/^\\s*$/ d' | sed 's/^/rm -rf /' | sh",
    "dist": "tsc --project tsconfig.dist.json",
    "format": "f() { yarn lint --fix ${@}; yarn prettier --write ${@:-.}; }; f",
    "lint": "eslint . --ext .ts",
    "start": "ts-node src/main.ts",
    "start:prod": "node src/main",
    "test": "jest --runInBand --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn test test/",
    "test:unit": "yarn test src/",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jest-json-schema": "^6.1.4",
    "@types/node": "^22.5.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-json-schema": "^6.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-multiline-arrays": "^3.0.6",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-packagejson": "^2.5.2",
    "prettier-plugin-sh": "^0.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "yarn": "^1.22.22"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x",
    "yarn": "1.x"
  }
}
